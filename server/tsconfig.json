{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "sourceMap": true,
        "outDir": "build",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["es2017"],
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true   //swithces b/w sefault import and * import
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "app/**/*"
    ]
}